<div id="formReview"></div>

<p id="notice"><%= notice %></p>

<h1>Products</h1>

<div class="container">
  <div class="row">
      <% @products.each do |product| %>
        <div class="p-2 col-md-3">
          <div class="card">
          <div class="card-body">
            <div class="prod-img d-flex justify-content-center">
              <img src="https://via.placeholder.com/250x250" alt="product_image">
            </div>
            <div class="prod-title">
              <h5 class="font-weight-bold text-center my-3"><%= product.title %></h5>
            </div>
            <div class="prod-desc">
              <%= product.description.truncate(100) %>
            </div>
            <div class="actions btn-group mt-3">
              <%= link_to "Learn more", product, class: "btn btn-primary" %>
              <%= link_to "Review", new_product_feedback_path(product_id: product.id), remote: true, class: "btn btn-danger" %>
              <!-- /prodcuts/:id -->
            </div>
          </div>
        </div>
        </div>
      <% end %>
  </div>
</div>

<br>

<div class="form-group" id="rating-form">
  <label for="rating">Rating</label>
</div>


